    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/qrButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qr"
                android:background="@drawable/bg"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">

            </Button>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoOfProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"

            tools:ignore="ContentDescription" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Price:"/>

                <TextView
                    android:id="@+id/priceofproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:text="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="EP"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Name:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Order Number:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:maxLength="40"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                android:text="Distination:"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:maxLength="40"
                android:singleLine="true"
                android:text="@string/status"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:maxLength="40"
                android:singleLine="true"
                android:text="Phone:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp">


            <TextView
                android:id="@+id/nameOfClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Name:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------"/>
            
            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Order Id"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                app:layout_constraintBottom_toTopOf="@id/ClientAddress"
                app:layout_constraintEnd_toStartOf="@id/status"
                app:layout_constraintStart_toEndOf="@+id/photoOfProduct"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------"/>

            <TextView
                android:id="@+id/ClientAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:maxLength="40"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                android:text="address"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:maxLength="40"
                android:singleLine="true"
                android:text="@string/status"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------"/>

            <TextView
                android:id="@+id/NumberOfClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:maxLength="40"
                android:singleLine="true"
                android:text="number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                 />


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>